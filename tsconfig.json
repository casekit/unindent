{
    "compilerOptions": {
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "esModuleInterop": true,
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "target": "ES2022",
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "jsx": "react",
        "rootDir": "src",
        "outDir": "build",
        "paths": {
            "#*": ["./src/*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts", "src/**/*.tsx"]
}
